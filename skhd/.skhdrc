hyper - r : yabai --restart-service
hyper - s : skhd --restart-service

#cmd - 0 : open 'google chrome'

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# resize window
ctrl + alt - a : yabai -m window --resize left:-20:0
ctrl + alt - s : yabai -m window --resize bottom:0:20
ctrl + alt - w : yabai -m window --resize top:0:-20
ctrl + alt - d : yabai -m window --resize right:20:0
shift + ctrl + alt - a : yabai -m window --resize left:20:0
shift + ctrl + alt - s : yabai -m window --resize bottom:0:-20
shift + ctrl + alt - w : yabai -m window --resize top:0:20
shift + ctrl + alt - d : yabai -m window --resize right:-20:0

# focus window
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
#ctrl + shift + alt - right : yabai -m window --focus east
#ctrl + shift + alt - l : yabai -m window --focus east
#ctrl + shift + alt - h : yabai -m window --focus west
#ctrl + shift + alt - left : yabai -m window --focus west
#ctrl + shift + alt - k : yabai -m window --focus north
#ctrl + shift + alt - up : yabai -m window --focus north
#ctrl + shift + alt - j : yabai -m window --focus south
#ctrl + shift + alt - down : yabai -m window --focus south

# swap window
ctrl + alt - left : yabai -m window --swap west
ctrl + alt - down : yabai -m window --swap south
ctrl + alt - up : yabai -m window --swap north
ctrl + alt - right : yabai -m window --swap east

ctrl + shift + alt - right : sh ~/.config/yabai/cycle_clockwise.sh

# float / unfloat window and center on screen
shift + alt - space : yabai -m window --toggle float

# focus space
alt - 0x32 : sh ~/.config/yabai/space_cycle_next.sh
alt + shift - 0x32 : sh ~/.config/yabai/space_cycle_prev.sh

alt - tab : yabai -m space --focus recent
alt - a : yabai -m space --focus chrome
alt - s : yabai -m space --focus xcode
alt - d : yabai -m space --focus slack
alt - f : yabai -m space --focus utils
alt - r : yabai -m space --focus terminal
alt - e : yabai -m space --focus social

